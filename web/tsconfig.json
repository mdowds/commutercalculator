{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es6",
    "allowJs": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  },
  "include": [
    "./client/"
  ],
  "exclude": [
    "./client/tests",
    "./client/components/tests"
  ]
}